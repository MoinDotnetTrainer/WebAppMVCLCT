@using WebAppMVCLCT.Models
@model OrdersModel
@{
    ViewData["Title"] = "NewOrder";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>NewOrder</h1>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>Order category</th>
            <td><input type="text" asp-for="OrderCategory" /></td>
        </tr>
       
       
        <tr>
            <th>Price</th>
            <td><input type="number" asp-for="Price" /></td>
        </tr>
      

        <tr>
            <td>
                <input type="submit" value="submit" name="submit" />
            </td>
        </tr>
    </table>
}