@model IEnumerable<WebAppMVCLCT.Models.OrdersModel>

@{
    ViewData["Title"] = "GetAllOrders";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>GetAllOrders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditOrder", "OrderOps", new { OrderID = item.OrderID })|
                    @Html.ActionLink("Delete", "DeleteOrders", "OrderOps", new { OrderID = item.OrderID })
            </td>
        </tr>
}
    </tbody>
</table>
