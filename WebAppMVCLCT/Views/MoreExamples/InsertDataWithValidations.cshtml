@using WebAppMVCLCT.Models
@model ValidateModel
@{
    ViewData["Title"] = "InsertDataWithValidations";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Insert With Validations</h1>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>Name</th>
            <td><input type="text" asp-for="Name" /></td>
            <td>
                <span asp-validation-for="Name" style="color:red"></span>
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td><input type="email" asp-for="Email" /></td>
            <td>
                <span asp-validation-for="Email" style="color:red"></span>
            </td>
        </tr>
        <tr>
            <th>Password</th>
            <td><input type="password" asp-for="Password" /></td>
            <td>
                <span asp-validation-for="Password" style="color:red"></span>
            </td>
        </tr>
        <tr>
            <th>Dob</th>
            <td><input type="datetime-local" asp-for="Dob" /></td>
            <td>
                <span asp-validation-for="Dob" style="color:red"></span>
            </td>
        </tr>
        <tr>
            <th>Sal</th>
            <td><input type="number" asp-for="Salary" /></td>
            <td>
                <span asp-validation-for="Salary" style="color:red"></span>
            </td>
        </tr>

        <tr>
            <th>Age</th>
            <td><input type="number" asp-for="Age" /></td>
            <td>
                <span asp-validation-for="Age" style="color:red"></span>
            </td>
        </tr>

        <tr>
            <th>Address</th>
            <td><input type="text" asp-for="Address" /></td>
            <td>
                <span asp-validation-for="Address" style="color:red"></span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="submit" name="submit" />
            </td>
        </tr>
    </table>
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
